<?xml version="1.0" encoding="utf-8"?>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.MainActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/dp_80"
        android:layout_height="@dimen/dp_80"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp_15"
        android:contentDescription="@string/picString"
        app:srcCompat="@drawable/logo3" />

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/imageView"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/dp_8">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_weight="1">
            <android.support.design.widget.TextInputEditText
                android:id="@+id/textInputEditText"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:background="@drawable/shape1"
                android:hint="@string/labelPhoneNo" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignTop="@id/textInputEditText"
                android:contentDescription="@string/picString"
                app:srcCompat="@drawable/ic_call_black_24dp"
                android:layout_alignEnd="@id/textInputEditText" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <EditText
                android:id="@+id/editText"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:background="@drawable/shape1"
                android:ems="10"
                android:hint="@string/labelPassword"
                android:inputType="textPassword"
                android:autofillHints="" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="25dp"
                android:layout_height="30dp"
                android:layout_alignTop="@+id/editText"
                android:contentDescription="@string/picString"
                app:srcCompat="@drawable/ic_lock_black_24dp"
                android:layout_alignEnd="@+id/editText" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">
            <EditText
                android:id="@+id/editText2"
                android:layout_width="match_parent"
                android:layout_height="39dp"
                android:layout_centerHorizontal="true"
                android:background="@drawable/shape1"
                android:ems="10"
                android:hint="@string/labelPWCheck"
                android:inputType="textPassword"
                android:autofillHints="" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="25dp"
                android:layout_height="30dp"
                android:layout_alignTop="@id/editText2"
                android:contentDescription="@string/picString"
                app:srcCompat="@drawable/ic_lock_black_24dp"
                android:layout_alignEnd="@id/editText2" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="30dp"
                android:layout_height="34dp"
                android:layout_alignTop="@id/switch1"
                android:contentDescription="@string/picString"
                app:srcCompat="@drawable/f2"
                android:layout_toEndOf="@id/switch1" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="30dp"
                android:layout_height="34dp"
                android:layout_alignTop="@id/switch1"
                android:contentDescription="@string/picString"
                app:srcCompat="@drawable/s1"
                android:layout_toStartOf="@id/switch1" />

            <Switch
                android:id="@+id/switch1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:switchTextAppearance="@style/TextAppearance.AppCompat.Button"
                android:text="" />
        </RelativeLayout>

        <Button
            android:id="@+id/button5"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_20"
            android:background="@drawable/bluebutton"
            android:text="@string/labelRegister" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignTop="@id/imageView8"
                android:contentDescription="@string/picString"
                app:srcCompat="@drawable/weibo"
                android:layout_toEndOf="@id/imageView8"
                android:layout_marginStart="@dimen/dp_4" />

            <ImageView
                android:id="@+id/imageView8"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/dp_8"
                android:contentDescription="@string/picString"
                app:srcCompat="@drawable/qq" />

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignTop="@id/imageView8"
                android:contentDescription="@string/picString"
                app:srcCompat="@drawable/weixin"
                android:layout_marginEnd="@dimen/dp_4"
                android:layout_toStartOf="@id/imageView8" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/dp_20">
            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_20"
                android:layout_centerHorizontal="true"
                android:text="@string/labelAlreadyRegistered"
                android:textSize="14sp" />

            <Button
                android:id="@+id/button4"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_30"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/textView4"
                android:text="@string/labelLogin"
                android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionMode.Subtitle"
                android:textSize="14sp" />
        </RelativeLayout>

    </LinearLayout>


</RelativeLayout>

